.gameboy {
    position: relative;
    width: 400px;
    height: 600px;
    background-color: gray;
    border: 10px solid red;
    padding: 20px;
    text-align: center;
}

.screen {
    width: 90%;
    height: 200px;
    background-color: yellow;
    padding: 10px;
    overflow: hidden;
    transition: all 0.3s ease-in-out;
}

#content-preview {
    cursor: pointer;
}

#full-content {
    display: none;
}

.hidden {
    display: none;
}
